<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="model" default="$(find lexus_description)/urdf/lexus.xacro"/>

  <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)" />

  <!-- load parameters -->
  <group ns="/vehicle_info">
    <rosparam file="$(find lexus_description)/config/vehicle_info.yaml" command="load"/>

    <group ns="mirror">
      <rosparam file="$(find lexus_description)/config/mirror.yaml" command="load"/>
    </group>
  </group>

  <!-- tf publisher -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

</launch>
